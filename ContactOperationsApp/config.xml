<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:rim="http://www.blackberry.com/ns/widgets" version="1.0.0.0">
  <name>OperationsApp</name>
  <description>OperationsApp demonstrates how easily you can use WebWorks to create an application in the matter of hours using WebWorks extensions that tie into the BlackBerry ecosystem.</description>
  <feature id="blackberry.app" required="true" version="1.0.0.0"/>
  <feature id="blackberry.app.event" required="true" version="1.0.0.0"/>
  <feature id="blackberry.find" required="true" version="1.0.0.0"/>
  <feature id="blackberry.identity" required="true" version="1.0.0.0"/>
  <feature id="blackberry.identity.phone" required="true" version="1.0.0.0"/>
  <feature id="blackberry.invoke" required="true" version="1.0.0.0"/>
  <feature id="blackberry.message" required="true" version="1.0.0.0"/>
  <feature id="blackberry.message.sms" required="true"/>
  <feature id="blackberry.media.camera" required="true"/>
  <feature id="blackberry.phone.Phone"  required="true"/>
  <feature id="blackberry.system" required="true" version="1.0.0.0"/>
  <feature id="blackberry.system.event" required="true" version="1.0.0.0"/>
  <feature id="blackberry.ui.menu" required="true" version="1.0.0.0"/>
  <feature id="blackberry.utils" required="true" version="1.0.0.0"/>
  <feature id="blackberry.invoke.BrowserArguments" required="true" version="1.0.0.0"/>
  <feature id="blackberry.invoke.AddressBookArguments" required="true" version="1.0.0.0"/>
  <feature id="blackberry.invoke.MessageArguments" required="true" version="1.0.0.0"/>
  <feature id="blackberry.invoke.PhoneArguments" required="true" version="1.0.0.0"/>
  <feature id="blackberry.io.file" required="true" version="1.0.0.0"/>
  <feature id="blackberry.io.dir" required="true" version="1.0.0.0"/>
  <feature id="blackberry.invoke.CameraArguments" required="true" version="1.0.0.0"/>
  <feature id="blackberry.invoke.CalendarArguments" required="true" version="1.0.0.0"/>
  <icon rim:hover="false" src="images/icon.png"/>
  <content src="index.html"/>
  <rim:permit>use_camera</rim:permit>
  <rim:loadingScreen backgroundColor="#c0c0c0" backgroundImage="" foregroundImage="images/spinner.gif" onRemotePageLoad="true" onLocalPageLoad="true" onFirstLaunch="true"/>
</widget>